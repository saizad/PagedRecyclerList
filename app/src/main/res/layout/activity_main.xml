<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

  <Button
          android:text="Simple List"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/simpleListSample" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
          app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="132dp"/>
  <Button
          android:text="Page List"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/pageKeyListSample" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
          app:layout_constraintTop_toBottomOf="@+id/simpleListSample" android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>