<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

  <TextView
          android:text="TextView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/content" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:paddingTop="10dp"
          android:paddingBottom="10dp" android:textSize="36sp" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent"/>

  <View android:layout_width="0dp" android:layout_height="1dp" android:background="@color/colorPrimaryDark" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/content" android:id="@+id/divider"/>
</androidx.constraintlayout.widget.ConstraintLayout>